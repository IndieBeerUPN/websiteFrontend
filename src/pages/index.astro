---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import heroImg from '../assets/hero.jpg'
import mesasImg from '../assets/mesas.jpg'
import refriImg from '../assets/refri.jpg'
import fetchApi from '../lib/strapi';
import foodImg from '../assets/burgerAndBeer.jpeg'
import type	CervezaProps from '../interfaces/cerveza';

const cerveza = await fetchApi<CervezaProps[]>({
	endpoint:'cervezas?populate=*',
	wrappedByKey: 'data',
});
---

<Layout title="Indie Beer">
	<main>
<!-- HERO SECTION -->
		<section class="relative h-dvh text-white overflow-hidden">
			<div class="absolute inset-0">
				<Image src={heroImg} alt="Hero" width={1920} class="object-cover object-center w-full h-full"/>
				<div class="absolute inset-0 bg-black opacity-[0.5]"></div>
			</div>
			<div class="relative z-10 flex flex-col justify-center items-center h-full text-center">
				<h1 class="text-8xl leading-tight mb-4">Indie Beer Upn</h1>
				<p class="text-2xl text-gray-300 mb-8">Descubre cervezas de todo el mundo</p>
				<a href="/cervezas" class="bg-yellow-400 text-gray-900 hover:bg-yellow-300 py-2 px-6 rounded-full text-lg font-semibold transition duration-300 ease-in-out transform hover:scale-105 hover:shadow-lg">Ver cervezas</a>
			</div>
		</section>

<!-- STATS SECTION -->
		<section class="text-white body-font px-4">
			<div class="px-4 py-12 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
				<div class="flex flex-col lg:items-center lg:flex-row">
				  <div class="flex items-center mb-6 lg:w-1/2 lg:mb-0">
					<div class="flex items-center justify-center w-10 h-10 mr-5 rounded-full bg-white/10 sm:w-24 sm:h-24 xl:mr-10 xl:w-28 xl:h-28">
