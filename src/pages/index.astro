import foodImg from '../assets/burgerAndBeer.jpeg'
import type	CervezaProps from '../interfaces/cerveza';
import type	heroPageProps from '../interfaces/heroPage';
import instagramProfilePic from '../assets/instagramProfilePic.jpg'
import instagramPost from '../assets/instagramPost.jpg'
import facebookProfilePic from '../assets/facebookProfilePic.jpg'
import facebookPost from '../assets/facebookPost.jpg'
import whatsAppBg from '../assets/whatsAppBg.jpg'


const optimizedWhatsAppBg = await getImage({src:whatsAppBg, format: 'webp'})

const cerveza = await fetchApi<CervezaProps[]>({
	endpoint:'cervezas?populate=*',
	wrappedByKey: 'data',
});

const info = await fetchApi<heroPageProps>({
	endpoint:'pagina-inicio?populate=*',
	wrappedByKey:'data',
})
